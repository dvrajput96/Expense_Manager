<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg1">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="535dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/givefeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="Feedback :"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/givefeedback"
        android:layout_below="@+id/givefeedback"
        android:layout_marginTop="17dp"
        android:text="Name :"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/emailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name1"
        android:layout_below="@+id/name1"
        android:layout_marginTop="23dp"
        android:textColor="#000000"
        android:text="Email_Id :"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/name1"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/name"
        android:ems="10" />

    <EditText
        android:id="@+id/emailid1"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailid"
        android:layout_below="@+id/emailid"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailid1"
        android:layout_below="@+id/emailid1"
        android:layout_marginTop="24dp"
        android:text="Feedback :"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/feedback1"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/feedback"
        android:layout_below="@+id/feedback"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine" >

    </EditText>

    <Button
        android:id="@+id/submit"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/feedback1"
        android:layout_below="@+id/feedback1"
        android:layout_marginTop="28dp"
        android:text="Submit"
        android:textColor="#000000" 
        />

    <Button
        android:id="@+id/cancle"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/submit"
        android:layout_alignBottom="@+id/submit"
        android:layout_alignRight="@+id/feedback1"
        android:layout_marginRight="14dp"
        android:text="Cancle" 
        android:textColor="#000000"
        />

</RelativeLayout>
</ScrollView>